<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/supnamerowlayouttxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SupplierName"
        android:textColor="@color/customerrowtxtcolor"
        android:textStyle="bold"
        android:textSize="25dp"
        />

    <TextView
        android:id="@+id/supaddressrowlaytxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SupplierAddress"
        android:textColor="@color/customerrowtxtcolor"
        android:textStyle="bold"
        android:textSize="25dp"
        />

       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/supitemsrowlaytxt"
            android:layout_width="126dp"
            android:layout_height="46dp"
            android:text="Items"
            android:textColor="@color/customerrowtxtcolor"
            android:textSize="25dp"
            android:textStyle="bold" />


        <CheckBox
            android:id="@+id/supinternalpartchk"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Internal Parts"
            android:textSize="15dp"
            android:textStyle="bold"
            />

        <CheckBox
            android:id="@+id/supexternalpartchk"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Internal Parts"
            android:textSize="15dp"
            android:textStyle="bold"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/suptotalamountrowlaytxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Supplier Amount"
        android:textColor="@color/customerrowtxtcolor"
        android:textStyle="bold"
        android:textSize="25dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/suppaidsrowlaytxt"
            android:layout_width="126dp"
            android:layout_height="46dp"
            android:text="Paid"
            android:textColor="@color/customerrowtxtcolor"
            android:textSize="25dp"
            android:textStyle="bold" />


        <CheckBox
            android:id="@+id/supyesrolaychk"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:textSize="15dp"
            android:textStyle="bold"
            />

        <CheckBox
            android:id="@+id/supnorolaychk"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="No"
            android:textSize="15dp"
            android:textStyle="bold"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/suppnorowlaytxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telephone No"
        android:textColor="@color/customerrowtxtcolor"
        android:textStyle="bold"
        android:textSize="25dp"
     />



    <Button
        android:id="@+id/supeditrolaybtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:background="@drawable/pages_buttons"
        android:textStyle="bold"
        android:textSize="25dp"
        />

</LinearLayout>
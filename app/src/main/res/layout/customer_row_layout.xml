<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/cusnamerowlayouttxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer  Name"
        android:textColor="@color/customerrowtxtcolor"
        android:textStyle="bold"
        android:textSize="25dp"
        />

    <TextView
        android:id="@+id/cusissuesrowlaytxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Issues "
        android:textColor="@color/customerrowtxtcolor"
        android:textStyle="bold"
        android:textSize="25dp"
        />

    <TextView
        android:id="@+id/cuspartsrowlaytxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Parts"
        android:textColor="@color/customerrowtxtcolor"
        android:textStyle="bold"
        android:textSize="25dp"
        />

    <TextView
        android:id="@+id/custotalamountrowlaytxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Amount"
        android:textColor="@color/customerrowtxtcolor"
        android:textStyle="bold"
        android:textSize="25dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cuspaidsrowlaytxt"
            android:layout_width="126dp"
            android:layout_height="46dp"
            android:text="Paid"
            android:textColor="@color/customerrowtxtcolor"
            android:textSize="25dp"
            android:textStyle="bold" />


        <CheckBox
            android:id="@+id/cusyesrolaychk"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:textSize="15dp"
            android:textStyle="bold"
            />

        <CheckBox
            android:id="@+id/cusnorolaychk"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="No"
            android:textSize="15dp"
            android:textStyle="bold"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/cusnorowlaytxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telephone No"
        android:textColor="@color/customerrowtxtcolor"
        android:textStyle="bold"
        android:textSize="25dp"
        />



    <Button
        android:id="@+id/cuseditrolaybtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:background="@drawable/pages_buttons"
        android:textStyle="bold"
        android:textSize="25dp"
        />

</LinearLayout>